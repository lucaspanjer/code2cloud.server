<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:cellview="urn:import:com.google.gwt.user.cellview.client"
			 xmlns:tt="urn:import:com.tasktop.c2c.server.common.profile.web.client">

	<ui:style field="local">
		.gwt-Button-Local {
			border-radius: 0;
			text-transform: none;
		}
	</ui:style>
	<g:HTMLPanel>

		<div class="deployment">
			<div class="deployment-heading">
				<h2 class="left">Product Details</h2>
				<div class="save">
					<g:Button addStyleNames="right button marginleft {local.gwt-Button-Local}" ui:field="upperCancelButton">Cancel</g:Button>
					<g:Button addStyleNames="right button special {local.gwt-Button-Local}" ui:field="upperSaveButton">Save</g:Button>
				</div>
				<div class="clear"/>
			</div>
			<div class="deployment-details edit">
				<!-- CLASS NAME IS NOT USED IN STYLES.CLASS NAME JUST FOR REFERENCE -->
				<h3/>
				<div class="clear"/>
				<fieldset>
					<label>Name:</label>
					<div>
						<tt:ValidatingTextBox fieldName="name" text="Product Name" ui:field="productName"/>
					</div>
				</fieldset>
				<fieldset>
					<label>Description:</label>
					<div class="description">
						<g:TextArea ui:field="productDescription" styleName="text"/>
					</div>
				</fieldset>
				<g:HTMLPanel ui:field="defaultReleaseSection">
					<fieldset>
						<label>Default Release:</label>
						<div>
							<g:ValueListBox ui:field="productDefaultRelease"/>
						</div>
					</fieldset>
				</g:HTMLPanel>
				<div class="clear"/>
			</div>
			<g:HTMLPanel ui:field="componentsSection" addStyleNames="components edit">
				<h3>Components</h3>
				<fieldset>
					<div>
						<cellview:CellTable ui:field="componentsTable"/>
					</div>
				</fieldset>
				<div class="clear"/>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="releasesSection" addStyleNames="releases edit">
				<h3>Releases</h3>
				<fieldset>
					<div>
						<cellview:CellTable ui:field="milestoneTable"/>
					</div>
				</fieldset>
				<div class="clear"/>
			</g:HTMLPanel>
			<div class="save">
				<g:Button addStyleNames="right button marginleft {local.gwt-Button-Local}" ui:field="lowerCancelButton">Cancel</g:Button>
				<g:Button addStyleNames="right button special {local.gwt-Button-Local}" ui:field="lowerSaveButton">Save</g:Button>
				<div class="clear"/>
			</div>
		</div>

	</g:HTMLPanel>
</ui:UiBinder>