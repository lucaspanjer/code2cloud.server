<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with field="pm" type="com.tasktop.c2c.server.profile.web.ui.client.resources.ProfileMessages"/>
	<ui:style>
		.popup { width: 400px;
				 padding: 15px; }
	</ui:style>
<g:HTMLPanel styleName="{style.popup}">
		<div>
			<ui:txt from="{pm.confirmLeaveProjectMsg}"/>
		</div>
		<br/>
		<div class="center">
			  <g:Button ui:field="leaveButton" styleName="button special"><ui:txt from="{pm.leaveProject}"/></g:Button>
			  <g:Button ui:field="cancelButton" styleName="button"><ui:txt from="{pm.cancel}"/></g:Button>
		  </div>	
	</g:HTMLPanel>
</ui:UiBinder>