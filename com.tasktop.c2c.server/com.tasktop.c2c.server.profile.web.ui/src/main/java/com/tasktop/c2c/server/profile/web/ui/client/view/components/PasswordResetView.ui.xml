<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:a='urn:import:com.tasktop.c2c.server.common.web.client.widgets'>
	<a:FormSectionPanel>
		<g:HTMLPanel>
			<p>Please choose a new password.</p>
			<table>
				<tr>
					<td><g:Label>Password</g:Label></td>
					<td><g:PasswordTextBox ui:field='password'/></td>
				</tr>
				<tr>
					<td><g:Label>Confirm Password</g:Label></td>
					<td><g:PasswordTextBox ui:field='passwordConfirm'/></td>
				</tr>
				<tr>
					<td colspan="2">
						Your password must:
						<ul>
							<li>be at least 8 characters in length</li>
							<li>have at least one lowercase character</li>
							<li>have at least one digit character</li>
							<li>not include your username</li>
						</ul>
					</td>
				</tr>
				<tr>
					<td colspan="2">
						<g:Button ui:field='submitButton'>Save New Password</g:Button>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</a:FormSectionPanel>
</ui:UiBinder>
