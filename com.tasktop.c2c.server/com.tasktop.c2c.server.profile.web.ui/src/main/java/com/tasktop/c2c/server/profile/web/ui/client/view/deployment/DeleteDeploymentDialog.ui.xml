<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	 <ui:style>
    	.popup { width: 400px;
				 padding: 15px; }
  	</ui:style>
<g:HTMLPanel styleName="{style.popup}">
		<div>
			This will permanently remove the deployed application from this project. This operation cannot be undone.
		</div>
		<br/>
		<div>
			<g:CheckBox ui:field="alsoDeleteInCF"/>
			Also delete this application in Cloud Foundry
		</div>
		<br/>
		<div class="center">
			  <g:Button ui:field="deleteButton" styleName="button special">Delete</g:Button>
			  <g:Button ui:field="cancelButton" styleName="button">Cancel</g:Button>
	    </div>	
	</g:HTMLPanel>
</ui:UiBinder>