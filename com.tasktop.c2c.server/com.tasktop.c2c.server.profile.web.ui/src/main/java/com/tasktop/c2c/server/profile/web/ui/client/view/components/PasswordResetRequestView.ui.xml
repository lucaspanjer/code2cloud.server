<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:a='urn:import:com.tasktop.c2c.server.common.web.client.widgets'>
	<ui:with field="pm" type="com.tasktop.c2c.server.profile.web.ui.client.resources.ProfileMessages"/>

	<a:FormSectionPanel>
		<g:HTMLPanel>
		<div class="forgot-password-popup">
			<p><ui:text from="{pm.forgotPasswordEnterEmail}"/></p>
			<fieldset>
				<label><ui:text from="{pm.emailAddress}"/></label>
				<g:TextBox ui:field='email'/>
			</fieldset>
			<div class="left">
				<g:Button ui:field='submitButton' styleName="button special login"><ui:text from="{pm.submitRequest}"/></g:Button>
			</div>
		</div>
		<div class="clear"></div>
		</g:HTMLPanel>
	</a:FormSectionPanel>
</ui:UiBinder>
