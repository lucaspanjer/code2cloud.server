<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:a='urn:import:com.tasktop.c2c.server.common.web.client.widgets'>

	<a:FormSectionPanel>
		<g:HTMLPanel>
		<div class="forgot-password-popup">
			<p>Enter your email address and your login information will be sent to you.</p>
			<fieldset>
				<label>Email Address</label>
				<g:TextBox ui:field='email'/>
			</fieldset>
			<div class="left">
				<g:Button ui:field='submitButton' styleName="button special login">Submit Request</g:Button>
			</div>
		</div>
		<div class="clear"></div>
		</g:HTMLPanel>
	</a:FormSectionPanel>
</ui:UiBinder>
