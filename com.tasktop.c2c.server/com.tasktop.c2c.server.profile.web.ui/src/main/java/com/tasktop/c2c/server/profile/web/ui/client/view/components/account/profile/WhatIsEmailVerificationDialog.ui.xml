<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with field="pm" type="com.tasktop.c2c.server.profile.web.ui.client.resources.ProfileMessages"/>
	
	<ui:style>
		.popup {
			width: 400px;
			padding: 15px;
		}
	</ui:style>

	<g:HTMLPanel styleName="{style.popup}">
		<g:HTML ui:field="whatIsEmailVerificationDetailsLabel"/>
		<div class="center">
			<g:Button ui:field="okButton" styleName="button"><ui:text from="{pm.ok}"/></g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>