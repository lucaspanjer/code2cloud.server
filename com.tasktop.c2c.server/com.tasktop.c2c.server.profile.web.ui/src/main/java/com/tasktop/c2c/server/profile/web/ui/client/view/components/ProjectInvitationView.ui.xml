<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:a='urn:import:com.tasktop.c2c.server.common.web.client.widgets'>
	<g:HTMLPanel>
		<div class="left">
			<h2>You have been invited to the '<g:Label ui:field="projectName"/>' project</h2>
			<p ui:field="projectDescription"/>
			<g:Anchor ui:field="acceptInviteAnchor" styleName="button special login">Accept Invitation</g:Anchor>
		</div>
		<div class="clear"></div> 
	</g:HTMLPanel>
</ui:UiBinder>
