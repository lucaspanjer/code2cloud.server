<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:HTMLPanel>
		<div id="project-admin" class="add-form edit project-admin left" >
			<h4>Properties</h4>
			<fieldset>
				<label class="left">Name:</label>
				<div>
					<g:TextBox ui:field="projectName" addStyleNames="text"/>
				</div>
			</fieldset>
			<fieldset>
				<label class="left">Description:</label>
				<p>
					<g:TextArea ui:field="projectDescription" addStyleNames="text"/>
				</p>
			</fieldset>
			<fieldset>
				<label>Wiki Markup:</label>
	 			<div>
					<g:ValueListBox ui:field="wikiLanguageListBox"/>
				</div>
			</fieldset>
			<div class="clear"/>
			<fieldset>
				<label>&#160;</label>
				<div class="save">
					<g:Button ui:field="cancelEditButton" addStyleNames="button" text="Cancel"/>
					<g:Button ui:field="saveButton" addStyleNames="button special" text="Save Changes"/>
				</div>
			</fieldset>
			<div class="clear"/>
		</div>

	</g:HTMLPanel>
</ui:UiBinder>
