<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with field="pm" type="com.tasktop.c2c.server.profile.web.ui.client.resources.ProfileMessages"/>
	<ui:style>
		.popup {
			width: 450px;
			padding: 15px;
		}
		.inline > div {
			display: inline;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.popup}">
		<div class="{style.inline}">
			<g:HTML ui:field="name"/>
		</div>
		<div>
			<ui:text from="{pm.removeRepositoryDetails}"/>
		</div>
		<br/>
		<div class="center">
			<g:Button ui:field="deleteButton" styleName="button special"><ui:text from="{pm.delete}"/></g:Button>
			<g:Button ui:field="cancelButton" styleName="button"><ui:text from="{pm.cancel}"/></g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>