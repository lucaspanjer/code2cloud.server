<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with field="pm" type="com.tasktop.c2c.server.profile.web.ui.client.resources.ProfileMessages"/>
	<ui:style>
		.popup {
			width: 500px;
			padding: 15px;
		}

		.popup fieldset {
			clear: both;
			padding: 0 0 10px 10px;
		}

		.popup fieldset label {
			float: left;
			width: 70px;
			margin-right: 5px;
		}

		.popup fieldset > div {
			float: left;
			text-align: right;
			margin-right: 5px;
		}

		.popup fieldset div b {
			font-weight: bolder;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.popup}">
		<fieldset>
			<label><ui:text from="{pm.name}"/><ui:text from="{pm.colon}"/></label>
			<div>
				<g:TextBox ui:field="repoName"/>.git
			</div>
		</fieldset>
		<fieldset>
			<label><ui:text from="{pm.url}"/><ui:text from="{pm.colon}"/></label>

			<div>
				<!--  These must be on the same line with no spaces to render without spaces. -->
				<g:Label ui:field="repoBaseUrl"/>
				<b>
					<g:Label ui:field="repoNameLabel"/>
				</b>
				.git
			</div>
		</fieldset>
		<g:FlowPanel ui:field="errorPanel"/>
		<div class="clear"></div>
		<div class="center">
			<g:Button ui:field="addButton" styleName="button special"><ui:text from="{pm.save}"/></g:Button>
			<g:Button ui:field="cancelButton" styleName="button"><ui:text from="{pm.cancel}"/></g:Button>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>