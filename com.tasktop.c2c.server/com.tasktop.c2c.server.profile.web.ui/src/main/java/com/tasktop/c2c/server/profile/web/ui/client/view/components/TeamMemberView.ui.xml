<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:p='urn:import:com.tasktop.c2c.server.profile.web.ui.client.widgets.chooser.person'>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames='personPanel floatLeft'>
			<g:HorizontalPanel addStyleNames='fullWidth'>
				<g:FlowPanel>
					<g:HorizontalPanel>
						<g:Image ui:field='icon' addStyleNames='icon'/>
						<g:Label ui:field='name' addStyleNames='name'/>
					</g:HorizontalPanel>
					<g:Label ui:field='username' addStyleNames='username'/>
				</g:FlowPanel>
				<g:FlowPanel addStyleNames='floatRight roles'>
					<g:Anchor ui:field='rolesAnchor'/>
				</g:FlowPanel>
			</g:HorizontalPanel>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames='personControls floatRight'>
			<g:Image ui:field='removeButton' visible='false'/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
