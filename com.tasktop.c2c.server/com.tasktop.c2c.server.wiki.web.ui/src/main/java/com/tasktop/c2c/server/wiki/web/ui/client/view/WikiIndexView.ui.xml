<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="wm" type="com.tasktop.c2c.server.wiki.web.ui.client.WikiMessages"/>
	<g:HTMLPanel styleName="project-detail-container">
		<h2><g:Label ui:field="title"/></h2>
		<div class="menu left">
			<div class="menu-items">
				<g:SimplePanel ui:field='searchPanel'/>
				<ul>
		      		<li><g:Anchor ui:field="allSearchLink"><ui:text from="{wm.allPages}"/></g:Anchor></li>
		    	</ul>
		    	<div class="bottom"></div>
		  	</div>
		 	<div class="spacer"></div>
		</div>
		<div class="content right">
			<div class="filter">
				<div class="left">
	 				<g:Button ui:field='newPageButton' addStyleNames="button special"><ui:text from="{wm.newPage}"/></g:Button>
				</div>
				<div class="right">
			</div>
			<div class="clear"></div>
		</div>
		<div class="spacer"></div>
		<g:FlowPanel ui:field="pagePanel"/>
		<div class="clear"></div>
		</div>
		<div class="clear"></div>	
	</g:HTMLPanel>
</ui:UiBinder>
