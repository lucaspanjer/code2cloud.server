<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:security="http://www.springframework.org/schema/security" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans    http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
						http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context-2.1.xsd
						http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.6.xsd">

	<import resource="classpath:META-INF/spring/applicationContext-tokenPreAuthentication-spring2.xml"/>

	<bean id="http403ForbiddenEntryPoint" class="org.springframework.security.ui.preauth.PreAuthenticatedProcessingFilterEntryPoint"/>

	<security:http entry-point-ref="http403ForbiddenEntryPoint">
		<security:intercept-url pattern="/**" access="ROLE_USER" />
	</security:http>
	
</beans>
