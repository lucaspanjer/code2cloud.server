	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>JPA Enhancement</id>
						<phase>process-classes</phase>
						<configuration>
							<tasks>
								<copy file="${basedir}/target/classes/META-INF/persistence-profile-mysql.xml"
								      tofile="${basedir}/target/classes/META-INF/persistence.xml"/>

								<taskdef name="weave"
									classname="org.eclipse.persistence.tools.weaving.jpa.StaticWeaveAntTask"
									classpathref="maven.compile.classpath" />
								<weave loglevel="CONFIG" source="${basedir}/target/classes"
									target="${basedir}/target/classes">
									<classpath refid="maven.compile.classpath" />
								</weave>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
